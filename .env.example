# Server Configuration
PORT=5000
NODE_ENV=development

# Google Cloud Configuration
# Get your project ID from Google Cloud Console
GOOGLE_CLOUD_PROJECT_ID=your-project-id-here
GOOGLE_CLOUD_LOCATION=us-central1

# Google Cloud AI Configuration
# Get your API key from Google Cloud Console -> APIs & Credentials
GOOGLE_CLOUD_AI_API_KEY=your-ai-api-key-here

# Database Configuration
# MongoDB connection string (local or cloud)
MONGODB_URI=mongodb://localhost:27017/kala-kaar
# For MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/kala-kaar

# JWT Configuration
# Generate a secure random string for JWT signing
JWT_SECRET=your-super-secret-jwt-key-here

# Stripe Configuration (for payments - optional)
STRIPE_SECRET_KEY=your-stripe-secret-key-here
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key-here

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# Google Cloud Storage (optional - for file uploads)
GOOGLE_CLOUD_STORAGE_BUCKET=kala-kaar-images

# Email Configuration (optional - for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
